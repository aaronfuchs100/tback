<style type="text/css">
#cont{
  margin: 20px;
}
#show{
  border: 1px solid #00000;
  margin: 0 100px;
  float: left;
}
#add_reward{
  width: 100px;
  height: 25px;
}
input{
  width: 150px;
}
#rewards{
  margin-right: 30px;
  float: left;
  display: inline-block;
}
.reward{
  float: left;
  padding: 3px 5px;
  margin: 3px;
  border: 1px solid #000;
}
#recycles{
  float: left;
  display: inline-block;
}
.recyclable{
  float: left;
  padding: 3px 5px;
  margin: 3px;
  border: 1px solid #000;
}
#add_add{
  float: left;
  width: 300px;
}
#recycle{
  width: 100%;
  float: left;
  display: inline-block;
  padding: 10px 30px;
}
#user_show{
  float: left;
  display: inline-block;
  padding: 10px;
}
#redeem_user{
  float: left;
  border: 1px solid #000;
  display: inline-block;
  padding: 10px;
}
#redeem{
  float: left;
  display: inline-block;
  padding: 10px;
}
</style>
<div id='cont'>

  <div id='show'>
    <h3><%= @event.name %></h3>
    <div>date: <%= @event.date %></div>
    <div>location: <%= @event.location %></div>
    <div>contact person: <%= @event.contact %></div>
    <div>phone: <%= @event.phone %></div>
    <div>email: <%= @event.email %></div>
    <button id='add_item'>show hide items</button>
  </div>

  <div id='add_add'>
    <h3>Add Items</h3>
    <%= form_tag do %>
      item name*: <%= text_field_tag 'name' %><br>
      value*: <%= text_field_tag 'value' %><br>
      quantity: <%= text_field_tag 'quantity', '', :placeholder => 'only for rewards' %><br>
      <%= hidden_field_tag 'event_id', @event.id %>
      <button type="button" id='add_reward'>Reward</button>
      <button type="button" id='add_recycle'>Recyclable</button>
    <% end %>
  </div>
  <div class="newUser">
    <h3>Register User</h3>
      <%= form_for @user, :url => '/events/newuser' do |f|  %>
        name: <%= f.text_field :name %><br>
        phone: <%= f.text_field :phone %><br>
        email: <%= f.text_field :email %><br>
        <%= hidden_field_tag 'event_id', @event.id %>
        <%= f.submit "create user", :class => 'btn btn-primary' %>
      <% end  %>
  </div>
  <div class='clearfix'></div>
  <div id='rewards'>
    <h3>Rewards</h3>
    <% @event.rewards.each do |r| %>
      <div class='reward'>
        Item: <%= r.item %><br>
        Value: <%= number_to_currency(r.value, :unit => '') %><br>
        Quantity: <%= r.quantity %>
      </div>
    <% end %>
    <div class='clearfix'></div>
  </div>
  <div id='recycles'>
    <h3>Recyclables</h3>
    <% @event.recyclables.each do |r| %>
      <div class='recyclable'>
        Item: <%= r.item %><br>
        Value: <%= number_to_currency(r.value, :unit => '') %>
      </div>
    <% end %>
    <div class='clearfix'></div>
  </div>
  <div class='clearfix'></div>
  <div id='recycle'>
    <h3>Recycle!</h3>
    <%= form_tag '/recycle' do %>
      Phone number: <%= autocomplete_field_tag 'user', '', autocomplete_user_phone_events_path, :size => 75 %><br>
      Item: <%= collection_select(:recyclable, :id, @event.recyclables, :id, :item )%>
      Quantity: <%= select :quantity, :number, (0..10) %>
      <%= hidden_field_tag 'event_id', @event.id %>
      <%= submit_tag 'recycle!' %>
    <% end %>
  </div>
  <div class='clearfix'></div>
  <div id='redeem_user'>
    <% if params[:u] %>
      <div id='user_show'>
        <h3>User</h3>
        <% @user = User.find(params[:u]) %>
        Name: <%= @user.name %><br>
        Email: <%= @user.email %><br>
        Phone: <%= @user.phone %><br>
        Balance: <%= number_to_currency( @user.balance, :unit => '' ) %><br>
      </div>
      <div id='redeem'>
        <h3>Redeem</h3>
        <% @event.rewards.each do |r| %>
          <% if @user.balance >= r.value && r.quantity > 0 %>
            <div class='reward'>
              <%= form_tag '/redeem' do %>
                Item: <%= r.item %><br>
                Value: <%= number_to_currency(r.value, :unit => '') %><br>
                Quantity: <%= r.quantity %>
                <%= hidden_field_tag 'event_id', @event.id %>
                <%= hidden_field_tag 'r_id', r.id %>
                <%= hidden_field_tag 'user_id', @user.id %><br>
                <%= submit_tag 'redeem' %>
              <% end %>
            </div>
          <% end %>
        <% end %><!-- each -->
        <div class='clearfix'></div>
      </div><!-- redeem -->
    <% end %><!-- if params u -->
    <div class='clearfix'></div>
  </div><!-- redeem user -->
</div> <!-- container -->




<script type="text/javascript">
  $(function(){
    $('#add_reward').click(add_reward);
    $('#add_recycle').click(add_recycle);
    $('#add_item').click(function(){
      $('#add_add').toggle();
    });
  });

  function add_reward(){
    name = $('#name').val();
    value = $('#value').val();
    qty = $('#quantity').val();
    event_id = $('#event_id').val();
    $.ajax({
      type: "POST",
      url: "/rewards",
      data: { item: name, value: value, quantity: qty, event_id: event_id }
    }).done(function( msg ) {
      location.reload();
    });
  }
  function add_recycle(){
    name = $('#name').val();
    value = $('#value').val();
    event_id = $('#event_id').val();
    $.ajax({
      type: "POST",
      url: "/recyclables",
      data: { item: name, value: value, event_id: event_id }
    }).done(function( msg ) {
location.reload();
    });
  }
</script>